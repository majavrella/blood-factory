<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/big_distance">
    <FrameLayout
        android:id="@+id/back"
        android:background="@drawable/small_circle_red"
        style="@style/back_button_frame">
        <ImageView
            style="@style/back_button_image"/>
    </FrameLayout>

    <TextView
        android:text=" Forgot Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorButton"
        android:textSize="@dimen/big_text"
        android:gravity="bottom|center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/small_distance"
        android:layout_marginBottom="@dimen/small_distance"
        android:background="@color/colorPrimaryDark" />
    <TextView
        android:text="Enter your mobile no and select get my password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/small_text"
        android:layout_marginBottom="@dimen/small_distance"
        android:gravity="start"/>
    <EditText
        android:hint="Mobile No"
        android:layout_height="50dp"
        android:id="@+id/user_mob"
        style="@style/mob_et"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/get_my_password"
            android:text="Get my password"
            android:layout_weight="1"
            android:background="@color/colorButton"
            android:textColor="@color/backgroundWhite"
            style="@style/frontButton"
            android:gravity="center"/>
    </LinearLayout>
</LinearLayout>