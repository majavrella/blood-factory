<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/common_page_color"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:background="@color/common_page_color">
            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/blood_request"
                    android:clickable="false"/>
            </FrameLayout>
            <TextView
                android:text="Your request is most valuable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/backgroundWhite"
                android:textSize="@dimen/medium_text"
                android:gravity="center" />
            <View
                style="@style/white_separator"/>
        </LinearLayout>

        <EditText
            android:id="@+id/patient_name"
            android:hint="Patient name"
            android:background="@drawable/rectangle_border_edittext"
            style="@style/username_et">
            <requestFocus />
        </EditText>

        <LinearLayout
            android:id="@+id/gender_error_layout"
            android:visibility="gone"
            style="@style/errorLayout">
            <TextView
                android:text="* "
                style="@style/redStar"/>
            <TextView
                android:id="@+id/gender_error"
                android:text=""
                style="@style/redStar"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:layout_margin="5dp"
            android:paddingLeft="5dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text" />

            <RadioGroup
                android:id="@+id/gender_status"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <RadioButton
                    android:id="@+id/genderFemale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:checked="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_text"
                    android:layout_weight="1"/>
                <RadioButton
                    android:id="@+id/genderMale"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:checked="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_text"
                    android:layout_weight="1"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/age_error_layout"
            android:visibility="gone"
            style="@style/errorLayout">
            <TextView
                android:text="* "
                style="@style/redStar"/>
            <TextView
                android:id="@+id/age_error"
                android:text=""
                style="@style/redStar"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="5dp"
            android:layout_margin="5dp"
            android:paddingLeft="5dp">
            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Age group"
                android:textColor="@color/black"
                android:textSize="@dimen/small_text" />

            <RadioGroup
                android:id="@+id/age_group"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical">
                <RadioButton
                    android:id="@+id/above18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="18+"
                    android:checked="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_text"
                    android:layout_weight="1"/>

                <RadioButton
                    android:id="@+id/below18"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="35+"
                    android:checked="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/small_text"
                    android:layout_weight="1"/>
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blood_grp_error_layout"
            android:visibility="gone"
            style="@style/errorLayout">
            <TextView
                android:text="* "
                style="@style/redStar"/>
            <TextView
                android:id="@+id/blood_grp_error"
                android:text=""
                style="@style/redStar"/>
        </LinearLayout>
        <Spinner
            android:id="@+id/patient_blood_group"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:entries="@array/list_of_blood_group"
            style="@style/editText"
            android:background="@drawable/rectangle_border_edittext"/>

        <EditText
            android:id="@+id/patient_mob"
            android:hint="Mob no (10 digits)"
            android:background="@drawable/rectangle_border_edittext"
            style="@style/mob_et">
        </EditText>

        <LinearLayout
            android:id="@+id/address_error_layout"
            android:visibility="gone"
            style="@style/errorLayout">
            <TextView
                android:text="* "
                style="@style/redStar"/>
            <TextView
                android:id="@+id/address_error"
                android:text=""
                style="@style/redStar"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <Spinner
                android:id="@+id/patient_state"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:entries="@array/list_of_states"
                android:layout_weight="1"
                android:background="@drawable/rectangle_border_edittext"
                style="@style/editText">
            </Spinner>
            <Spinner
                android:id="@+id/patient_city"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:entries="@array/list_of_cities"
                android:layout_weight="1"
                android:background="@drawable/rectangle_border_edittext"
                style="@style/editText">
            </Spinner>
        </LinearLayout>

        <EditText
            android:id="@+id/last_date_need"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:lines="1"
            android:inputType="date"
            android:maxLength="10"
            android:maxLines="1"
            android:hint="Last date of need (dd/mm/yyyy)"
            android:background="@drawable/rectangle_border_edittext"
            style="@style/editText">
        </EditText>

        <EditText
            android:id="@+id/purpose_of_request"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="start"
            android:lines="3"
            android:maxLines="3"
            android:hint="Purpose of request (optional)"
            android:background="@drawable/rectangle_border_edittext"
            style="@style/editText">
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="end"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/post_blood_request"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Post request"
                android:background="@drawable/roundend_border"
                android:layout_weight="1"
                style="@style/CommonButton"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
