<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/very_small_distance"
    android:background="@drawable/rectangle_border">
    <LinearLayout
        android:id="@+id/donar_container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backgroundWhite">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/medium_distance"
            android:paddingRight="@dimen/medium_distance"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:background="@drawable/small_circle">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/member_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/blood_drop" />
            </FrameLayout>
            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unknown"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/donar_availability_status"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginLeft="-30dp"
            android:layout_marginBottom="24dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="bottom"
            android:src="@drawable/cross"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No name set"
                    android:textSize="@dimen/very_small_text"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/blood_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No blood group specified"
                    android:textSize="@dimen/very_small_text"
                    android:layout_marginBottom="@dimen/very_small_distance"
                    android:layout_marginTop="@dimen/very_small_distance"
                    android:textColor="@color/black"/>
            </LinearLayout>
<!--            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXXXXX"
                    android:textSize="@dimen/very_small_text"
                    android:layout_marginBottom="@dimen/very_small_distance"
                    android:layout_marginTop="@dimen/very_small_distance"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/more"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="More..."
                    android:textColor="@color/colorButton" />
            </LinearLayout>-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXXXXX"
                    android:textSize="@dimen/very_very_small_text"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/more"
                    android:clickable="true"
                    android:gravity="end"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="More..."
                    android:textColor="@color/colorButton" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/more_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="@dimen/small_distance"
        android:background="@color/background_color">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/call"
                android:layout_width="@dimen/small_logo"
                android:layout_height="@dimen/small_logo"
                android:layout_gravity="center"
                android:src="@drawable/phone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Call"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/sms"
                android:layout_width="@dimen/small_logo"
                android:layout_height="@dimen/small_logo"
                android:layout_gravity="center"
                android:src="@drawable/sms"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Sms"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/share"
                android:layout_width="@dimen/small_logo"
                android:layout_height="@dimen/small_logo"
                android:layout_gravity="center"
                android:src="@drawable/share"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Share"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/about"
                android:layout_width="@dimen/small_logo"
                android:layout_height="@dimen/small_logo"
                android:layout_gravity="center"
                android:src="@drawable/about"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Info"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>