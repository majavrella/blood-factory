<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/very_small_distance"
    android:background="@drawable/rectangle_border">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/not_available_color">
        <FrameLayout
            android:layout_width="@dimen/big_img_size"
            android:layout_height="@dimen/big_img_size">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/blood_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Blood"
                    android:textAllCaps="true"
                    android:textColor="@color/backgroundWhite"
                    android:textSize="@dimen/medium_text"/>
                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Status"
                    android:textAllCaps="false"
                    android:gravity="center|top"
                    android:textColor="@color/backgroundWhite"
                    android:textSize="@dimen/very_very_small_text"
                    android:maxLength="14"/>
            </LinearLayout>
        </FrameLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/black"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/big_img_size"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:padding="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textSize="@dimen/very_small_text"
                    android:textColor="@color/backgroundWhite"
                    android:layout_marginBottom="@dimen/small_distance"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=", "
                    android:textSize="@dimen/very_small_text"
                    android:textColor="@color/backgroundWhite"
                    android:layout_marginBottom="@dimen/small_distance"/>
                <TextView
                    android:id="@+id/gender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender"
                    android:textSize="@dimen/very_small_text"
                    android:textColor="@color/backgroundWhite"
                    android:layout_marginBottom="@dimen/small_distance"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textSize="@dimen/very_small_text"
                    android:textColor="@color/backgroundWhite"
                    android:layout_marginBottom="@dimen/small_distance"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=", "
                    android:textSize="@dimen/very_small_text"
                    android:textColor="@color/backgroundWhite"
                    android:layout_marginBottom="@dimen/small_distance"/>
                <TextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="State"
                    android:textSize="@dimen/very_small_text"
                    android:textColor="@color/backgroundWhite"
                    android:layout_marginBottom="@dimen/small_distance"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/phone_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XXXXXXXXXX"
                    android:textSize="@dimen/very_small_text"
                    android:textColor="@color/backgroundWhite"/>
                <TextView
                    android:id="@+id/more"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="More..."
                    android:textSize="@dimen/small_text"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/more_container"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/background_color">
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/call"
                android:layout_width="@dimen/small_medium_img_size"
                android:layout_height="@dimen/small_medium_img_size"
                android:layout_margin="@dimen/small_distance"
                android:layout_gravity="center"
                android:src="@drawable/phone"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/sms"
                android:layout_width="@dimen/small_medium_img_size"
                android:layout_height="@dimen/small_medium_img_size"
                android:layout_margin="@dimen/small_distance"
                android:layout_gravity="center"
                android:src="@drawable/sms"/>

        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/share"
                android:layout_width="@dimen/small_medium_img_size"
                android:layout_height="@dimen/small_medium_img_size"
                android:layout_margin="@dimen/small_distance"
                android:layout_gravity="center"
                android:src="@drawable/share"/>
        </FrameLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/about"
                android:layout_width="@dimen/small_medium_img_size"
                android:layout_height="@dimen/small_medium_img_size"
                android:layout_margin="@dimen/small_distance"
                android:layout_gravity="center"
                android:src="@drawable/about"/>
        </FrameLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/backgroundColor"/>
</LinearLayout>