<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_page_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/medium_distance"
        android:paddingLeft="@dimen/medium_distance"
        android:paddingRight="@dimen/medium_distance">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="@dimen/medium_img_size"
                android:layout_height="@dimen/medium_img_size"
                android:src="@drawable/change_password"
                android:clickable="false"/>
        </FrameLayout>
        <TextView
            android:text="@string/change_pwd_tagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/backgroundWhite"
            android:textSize="@dimen/medium_text"
            android:gravity="center" />
        <View
            style="@style/white_separator"/>
    </LinearLayout>

    <TextView
        android:id="@+id/password_error"
        android:layout_margin="@dimen/medium_distance"
        android:text=""
        style="@style/redStar"/>

    <EditText
        android:id="@+id/old_password"
        android:hint="@string/placeholder_old_pwd"
        android:background="@drawable/rectangle_box_with_color"
        style="@style/password_et"/>

    <EditText
        android:id="@+id/new_password"
        android:hint="@string/placeholder_new_pwd"
        android:background="@drawable/rectangle_box_with_color"
        style="@style/password_et"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="end"
        android:layout_marginBottom="@dimen/medium_distance">
        <Button
            android:id="@+id/change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/update_pwd_btn_text"
            android:background="@color/new_btn_color"
            android:layout_weight="1"
            style="@style/CommonButton"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>

